<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="registerPane" prefHeight="770.0" prefWidth="1350.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.inspira1stsemesterproject.controller.FirstRegisterPageController">
   <children>
      <ImageView fitHeight="770.0" fitWidth="1350.0" layoutX="1.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/img.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="103.0" fitWidth="106.0" layoutX="89.0" layoutY="83.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/icon-inspira.png" />
         </image>
      </ImageView>
      <Label fx:id="lblRegister" layoutX="200.0" layoutY="110.0" text="Register to Inspira" textFill="#34495e">
         <font>
            <Font name="Comic Sans MS Bold" size="36.0" />
         </font>
      </Label>
      <Label fx:id="lblAlreadyAcc" layoutX="104.0" layoutY="186.0" text="Already have an account?">
         <font>
            <Font name="Comic Sans MS" size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblLoggedIn" layoutX="319.0" layoutY="186.0" onMouseClicked="#lblLoggedInOnClick" text="Logged in" textFill="#2980b9">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblFirstName" layoutX="104.0" layoutY="241.0" text="First name">
         <font>
            <Font name="Serif Regular" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="txtFirstName" layoutX="104.0" layoutY="276.0" prefHeight="46.0" prefWidth="494.0" stylesheets="@../style/Style.css" />
      <Label fx:id="lblLastName" layoutX="105.0" layoutY="347.0" text="Last name">
         <font>
            <Font name="Serif Regular" size="17.0" />
         </font>
      </Label>
      <Label fx:id="lblEmail" layoutX="105.0" layoutY="458.0" text="Email">
         <font>
            <Font name="Serif Regular" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="txtEmail" layoutX="104.0" layoutY="497.0" prefHeight="46.0" prefWidth="494.0" style="-fx-background-radius: 15;" stylesheets="@../style/Style.css" />
      <TextField fx:id="txtLastName" layoutX="104.0" layoutY="385.0" prefHeight="46.0" prefWidth="494.0" stylesheets="@../style/Style.css" />
      <Button fx:id="btnNext" layoutX="104.0" layoutY="619.0" mnemonicParsing="false" onAction="#btnNextOnAction" prefHeight="50.0" prefWidth="494.0" stylesheets="@../style/Style.css" text="Next">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
      </Button>
      <ImageView fitHeight="600.0" fitWidth="600.0" layoutX="665.0" layoutY="87.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/register-page-new.png" />
         </image>
      </ImageView>
      <ImageView fx:id="imageBack" fitHeight="50.0" fitWidth="50.0" layoutX="1232.0" layoutY="62.0" onMouseClicked="#imageBackOnClick" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/icon-back.png" />
         </image>
      </ImageView>
      <Label fx:id="lblError" layoutX="105.0" layoutY="555.0" prefHeight="18.0" prefWidth="494.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
